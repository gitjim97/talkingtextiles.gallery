---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

interface Props { pageTitle?: string }
const { pageTitle } = Astro.props as Props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle ? `${pageTitle} | Talking Textiles` : "Talking Textiles Gallery"}</title>
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="theme-color" content="#ffa500" />
    <meta name="description" content="Talking Textiles Gallery: artists, stories, and culture through fabric and form." />
  </head>
  <body style="min-height: 100vh; display: flex; flex-direction: column;">
    <Nav />
    <div style="flex: 1 0 auto;">
      <slot />
    </div>
    <Footer />
  </body>
  
</html>
