---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

interface Props {
  pageTitle?: string;
  description?: string;
  keywords?: string;
  image?: string;
  type?: string;
  structuredData?: object;
}
const {
  pageTitle,
  description = "Talking Textiles Gallery: Celebrating artists, stories, and culture through fabric and form. Explore our collection of textile art, book classes, and view exhibitions.",
  keywords = "textile art, fabric art, gallery, artists, exhibitions, classes, workshops, cultural art, African American art, storytelling through fabric",
  image = "/images/AnthCover.jpg",
  type = "website",
  structuredData
} = Astro.props as Props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteName = "Talking Textiles Gallery";
const fullTitle = pageTitle ? `${pageTitle} | ${siteName}` : siteName;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{fullTitle}</title>
    
    <!-- Random favicon will be set by JavaScript from gallery portraits -->
    <script src="/js/random-favicon.js" is:inline></script>
    
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Talking Textiles Gallery" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="theme-color" content="#ffa500" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <!-- Additional SEO -->
    <meta name="format-detection" content="telephone=yes" />
    <meta name="geo.region" content="US-CA" />
    <meta name="geo.placename" content="California" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ArtGallery",
      "name": siteName,
      "description": description,
      "url": Astro.site,
      "logo": new URL("/favicon.svg", Astro.site),
      "image": new URL(image, Astro.site),
      "address": {
        "@type": "PostalAddress",
        "addressRegion": "CA",
        "addressCountry": "US"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+1-909-455-8659",
        "email": "letts_do_art@yahoo.com",
        "contactType": "customer service"
      },
      "sameAs": [
        // Add social media URLs here when available
      ],
      ...structuredData
    })} />

    <!-- Critical CSS inline for better FCP -->
    <style>
      /* Critical above-the-fold styles */
      body { 
        background: #000; 
        color: #fff; 
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, sans-serif;
        margin: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      
      /* Critical navigation styles */
      nav { 
        background: rgba(0,0,0,0.95);
        backdrop-filter: blur(10px);
        position: sticky;
        top: 0;
        z-index: 100;
      }
      /* Fallback nav link + dropdown minimal styling (in case external CSS fails) */
      nav .nav-link {color:#fff;font-weight:600;text-decoration:none;padding:.5rem .75rem;display:inline-block}
      nav .nav-link:hover, nav .nav-link:focus{background:rgba(255,255,255,0.15);color:#ffa500}
      nav .dropdown{position:relative}
      nav .dropdown-menu{display:none;position:absolute;left:0;top:100%;background:#ff8c00;margin:0;padding:.25rem 0;list-style:none;min-width:160px}
      nav .dropdown:hover .dropdown-menu{display:block}
      nav .dropdown-menu a{display:block;padding:.5rem 1rem;color:#fff}
      nav .dropdown-menu a:hover{background:rgba(0,0,0,0.15)}
      
      /* Critical grid layout */
      .gallery .grid { 
        display: grid; 
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); 
        gap: 1rem; 
        padding: 1rem; 
      }
    </style>

    <!-- Preload critical resources -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    
    <!-- Resource hints for performance -->
    <link rel="preload" href="/images/thumbs/Angela_Davis-180.webp" as="image" type="image/webp" />
    <link rel="preload" href="/images/thumbs/Copy_of_Gravey-180.webp" as="image" type="image/webp" />
    
    <!-- Load non-critical CSS asynchronously -->
  <!-- Load global stylesheet from public for consistent production path -->
  <link rel="preload" href="/styles/global.css?v=3" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link rel="stylesheet" href="/styles/global.css?v=3"></noscript>
  </head>
  <body style="min-height: 100vh; display: flex; flex-direction: column;">
    <!-- Service Worker Registration for Performance -->
    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js')
            .then(registration => {
              console.log('SW registered: ', registration);
            })
            .catch(registrationError => {
              console.log('SW registration failed: ', registrationError);
            });
        });
      }
    </script>
    
    <Nav />
    <div style="flex: 1 0 auto;">
      <slot />
    </div>
    <Footer />
    
    <!-- Performance optimizations script -->
    <script src="/js/performance.js" async></script>
  </body>
</html>
