---
import Layout from '../layouts/Layout.astro';
---

<Layout pageTitle="Anthology">
  <main class="anthology-page">
    <h2>Order the Talking Textiles Anthology</h2>
    <p>Get your hardcover copy of the show! Limited quantities available.</p>
    <div class="anthology-book-section">
  <img src="/images/AnthCover.jpg" alt="Anthology Book Cover" style="width:180px; height:240px; object-fit:cover; border-radius:8px; margin-bottom:1rem; box-shadow:0 4px 16px rgba(0,0,0,0.18);" />
  <a href="/classes/book" style="background: orange; color: #fff; border: none; border-radius: 4px; padding: 0.7rem 2rem; font-size: 1.1rem; font-weight: bold; text-decoration: none; display: inline-block; transition: background 0.25s;">Purchase Book - $35</a>
    </div>
     </main>
  <style>
    .anthology-page {
      max-width: 600px;
      margin: 0 auto;
      padding: 2rem 1rem;
      color: #fff;
      text-align: center;
    }
    .anthology-book-section {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 2rem;
    }
    .anthology-book-section a:hover {
      background: #e6940a !important;
    }
    .book-image-placeholder {
      margin-bottom: 1rem;
    }
    @media (max-width: 600px) {
      .anthology-page {
        padding: 1rem 0.5rem;
      }
      .anthology-book-section {
        margin-top: 1rem;
      }
    }
  </style>
</Layout>
