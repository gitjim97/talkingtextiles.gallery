---
import Layout from '../../layouts/Layout.astro';
import OptimizedImage from '../../components/OptimizedImage.astro';
---

<Layout>
  <a href="/gallery/" style="margin:1rem;display:inline-block;">‚Üê Back to Gallery</a>
    <main class="artist-page-bg" style="max-width: 800px; margin: 2rem auto;">
    <!-- <h1>Angela Davis</h1> -->
    <picture>
      <source srcset="/images/Angela_Davis.webp" type="image/webp" />
      <img 
        src="/images/Angela_Davis.jpg" 
        alt="Angela Davis Artwork" 
        style="width:100%; max-width:600px; display:block; margin:1rem auto; border-radius:12px;" 
        loading="eager"
        fetchpriority="high"
        decoding="sync"
      />
    </picture>
    <section style="display: flex; align-items: flex-start; gap: 2rem; margin-top:2rem; flex-wrap: wrap;">
      <img src="/images/artists/Angela_Davis/profile.jpg" alt="Angela Davis Profile" style="width:120px; height:120px; border-radius:50%; object-fit:cover; box-shadow:0 2px 8px rgba(0,0,0,0.10); flex-shrink: 0;" onerror="this.style.display='none'" loading="lazy" />
      <div style="flex: 1; min-width: 300px;">
        <h2 style="color: #ffa500; margin-top: 0;">About the Artist</h2>
        <p style="line-height: 1.6; color: #fff;">
          Angela Davis is a renowned artist known for her impactful work in social justice and textile arts.
          Her pieces often explore themes of identity, resistance, and community.
        </p>
      </div>
    </section>
    <section style="margin-top:2rem;">
      <h2 style="color: #ffa500;">Artwork Information</h2>
      <p style="line-height: 1.6; color: #fff;">
        This piece is part of the Talking Textiles collection, reflecting the intersection of activism and art.
      </p>
    </section>
  </main>
</Layout>
